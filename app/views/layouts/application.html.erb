.header-i{
    width: 364px;
}
.image-container-about{
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 10px 5px rgba(255, 0, 0, 0.3); /* Adiciona uma sombra vermelha opaca */
  border-radius: 3%; /* Opcional, se quiser uma sombra circular*/
}
.about-title{
  font-family: "Arial",sans-serif;
  font-size: 30px;
}
.image-container {
    text-align: center; /* Alinha o conteúdo do contêiner à direita */
}

.h-description {
    text-align: left; /* Alinha o texto à esquerda */
}

.larger-image {
  max-width: 500px;
  height: auto;
}

.about-text {
  text-align: justify;
  flex: 1;
  margin-left: 20px;
}

.about-cont {
  display: flex;
  flex-direction: column; /* Empilhe os elementos na vertical em dispositivos menores */
  gap: 32px; /* Adicione espaço entre cada entrada "Sobre" */
}

@media (min-width: 768px) {
  .about-cont {
    flex-direction: row; /* Disponha os elementos em linha em dispositivos maiores */
     }
}

@media (max-width: 767px) {
  .about-cont {
    flex-direction: column; /* Empilhe os elementos na vertical em dispositivos móveis */
    align-items: flex-start; /* Alinhe os elementos à esquerda em dispositivos móveis */
  }
}


.menu {
  background-color: #333;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
}

.menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.menu li {
  display: inline;
  margin: 0 20px;
}

.menu a {
  color: #fff;
  text-decoration: none;
  font-size: 16px;
  transition: color 0.3s;
}

.menu a:hover {
  color: #ff0000;
